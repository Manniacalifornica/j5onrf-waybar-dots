{
    // Workspaces
    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "I",
            "2": "II",
            "3": "III",
            "4": "IV",
            "5": "V",
            "active": ""
        },
        "persistent-workspaces": {
            "*": 30
        }
    },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "",
        "tooltip-format": "Left: rofi\nRight: waypaper",
        "on-click": "rofi -show drun -replace",
        "on-click-middle": "~/.config/waybar/themeswitcher.sh",
        "on-click-right": "waypaper",
        "tooltip": true
    },

    // Power Menu
    "custom/exit": {
        "format": "",
        "tooltip-format": "Left: wlogout\nRight: setting app",
        "on-click": "wlogout -b 4",
        "on-click-right": "sleep 0.1 && ~/.config/ml4w/apps/ML4W_Welcome-x86_64.AppImage",
        "tooltip": true
    },

    // Clock - %b %e = Month Day
    "clock": {
        "format": "{:%I:%M %a}",
        "format-alt": "{:%Y-%m-%d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click-right": "gapplication launch org.gnome.Weather",
        "calendar": {
            "mode": "month",
            "format": {
                "today": "<span color='#ff6699'><b>{}</b></span>",
            }
        }
    },

    // CPU
    "cpu": {
        "format": "{usage}%",
        "on-click": "alacritty -e btop",
        "on-click-right": "~/.config/ml4w/settings/ai.sh",
    },

    // Memory
    "memory": {
        "format": "{used:0.1f} GB",
        "tooltip": true,
        "on-click": "alacritty -e btop"

    },

    // Network
    "network": {
        "format": "{ifname}",
        "format-ethernet": "",
        "format-disconnected": "Not connected",
        "tooltip-format": " {ifname} via {gwaddri}",
        "tooltip-format-ethernet": " {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 20,
        "on-click-right": "sleep 0.1 && ~/.config/ml4w/scripts/cliphist.sh d"
    },

    // Pulseaudio
    "pulseaudio": {
        "tooltip": false,
        "scroll-step": 3,
        "format": "                                                                                  󰕾 {volume}",
        "format-icons": {
        "default": ["", "", ""]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "format-muted": "                                                               婢 {volume}"
    }
}

